<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineFragment.AddMedicineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="7dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background_cardview"
                android:padding="10dp">

                <TextView
                    android:id="@+id/nameHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto"
                    android:text="Medicine Name"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/medicine_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameHead"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/drawable_underline"
                    android:fontFamily="@font/roboto"
                    android:paddingHorizontal="5dp"
                    android:textSize="18sp"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            app:cardCornerRadius="7dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background_cardview"
                android:padding="10dp">

                <TextView
                    android:id="@+id/sr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto"
                    android:text="Set Reminder"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:id="@+id/LL1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sr"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Time"
                        android:textColor="@color/purple_700"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/drawable_underline"
                        android:fontFamily="@font/roboto"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LL1"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Doses"
                        android:textColor="@color/purple_700"
                        android:textSize="18sp"/>

                    <EditText
                        android:id="@+id/doses"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/drawable_underline"
                        android:fontFamily="@font/roboto"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/d_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LL1"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/LL2"
                    android:fontFamily="@font/roboto"
                    android:text="Type"
                    android:textColor="@color/purple_700"
                    android:textSize="18sp"/>

                <Spinner
                    android:id="@+id/dose_type"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/LL1"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/d_type"
                    android:background="@drawable/rounded_background"
                    android:entries="@array/medications_shape_array"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="saveMedicineData"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_done" />

</RelativeLayout>